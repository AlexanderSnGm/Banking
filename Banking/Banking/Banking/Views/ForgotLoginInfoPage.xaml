<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Banking.Views.ForgotLoginInfoPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Has Olvidado tu contraseña?, No te preocupes, acá puedes volver a recuperarla!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium" Margin="0,0,0,0" />
                <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
                
                <Label Text="Identificacion:" ></Label>
                <Entry Text="" Placeholder="Identificacion" x:Name="txtID" Keyboard="Default"></Entry>
                <StackLayout>
                    <Button x:Name="btnForgotPass" Clicked="BtnForgotPass_Clicked" Text="Ingresar"></Button>
                </StackLayout>

                </StackLayout>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>